<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.FavouritesFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:background="@color/back_color"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:background="@color/action_bar_color"
            app:title="Favourites Programs"
            app:titleTextColor="#B3FFFFFF"
            android:elevation="10dp"

            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

        <TextView
            android:textColor="@color/text_color"
            android:layout_margin="10dp"
            android:text="Share Our App With Your Friends!"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <androidx.cardview.widget.CardView
            android:backgroundTint="@color/action_bar_color"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:textColor="@color/text_color"
                android:layout_margin="5dp"
                android:text="Update Message"
                android:id="@+id/txtMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>


    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>